@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>修改密码</title>

    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#reset').click(function () {
                var un = $('#username').val();
                un = $.trim(un);
                if (un.length < 1) {
                    alert("用户名不能为空");
                    return;
                }

                var opw = $('#old_password').val();
                opw = $.trim(opw);
                if (opw.length < 1) {
                    alert("密码不能为空");
                    return;
                } else if (opw.length < 6) {
                    alert("密码不能小于6位");
                    return;
                }

                var npw = $('#new_password').val();
                npw = $.trim(npw);
                if (npw.length < 1) {
                    alert("密码不能为空");
                    return;
                } else if (npw.length < 6) {
                    alert("密码不能小于6位");
                    return;
                }

                var npw2 = $('#new_password2').val();
                npw2 = $.trim(npw2);
                if (npw != npw2) {
                    alert("两次输入密码不一致");
                    return;
                }

                $.post("/Home/ProcessReset", { username: un, oldPassword: opw, newPassword: npw }, function (result) {
                    if (result == 1) {
                        alert("修改成功");
                        window.location.href = "/Home/Index";
                    } else if (result == -2) {
                        alert("用户不存在");
                    } else if (result == -1) {
                        alert("旧密码错误");
                    }
                })
            })
        });
    </script>
</head>
<body>
    <h1>修改密码</h1>
    <div>
        <table>
            <tr>
                <td>用户名</td>
                <td>
                    <input id="username" type="text" />
                </td>
            </tr>
            <tr>
                <td>旧密码</td>
                <td>
                    <input id="old_password" type="password" />
                </td>
            </tr>
            <tr>
                <td>新密码</td>
                <td>
                    <input id="new_password" type="password" />
                </td>
            </tr>
            <tr>
                <td>确认新密码</td>
                <td>
                    <input id="new_password2" type="password" />
                </td>
            </tr>
            <tr>
                <td>
                    <input id="reset" type="button" value="修改密码" />
                </td>
                <td>
                    @Html.ActionLink("返回主页", "Index")
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
